{
  "openapi": "3.0.3",
  "info": {
    "title": "Loja Raiphone",
    "description": "API do Sistema de loja Raiphone",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "http://localhost:8888/"
    }
  ],
  "tags": [
    {
      "name": "Cadastro de Aparelho Celular",
      "description": "Acesso aos pitens cadastrados"
    }
  ],
  "paths": {
    "/cadastraproduto/": {
      "post": {
        "tags": [
          "Cadastrar Celular"
        ],
        "description": "Cadastra um novo Celular",
        "operationId": "cadastracelular",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": {
                    "type": "string"
                  },
                  "preco": {
                    "type": "string"
                  },
                  "codbarra": {
                    "type": "string"
                  }
                },
                "example": {
                  "nome": "Banana",
                  "preco": 10,
                  "codbarra": 10001
                }
              }
            }
          }
        },
        "parameters": [],
        "responses": {
          "201": {
            "description": "Retorna uma mensagem de sucesso com ID do produto cadastrado"
          }
        }
      }
    },
    "/listaprodutos/": {
      "get": {
        "tags": [
          "Cadastro de Produtos"
        ],
        "description": "Lista os Produtos j√° cadastrados",
        "operationId": "listaprodutos",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Retorna a Lista de produtos Cadastrados"
          }
        }
      }
    }
  }
}